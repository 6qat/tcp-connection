{
  "name": "@6qat/tcp-connection",
  "version": "0.2.4",
  "description": "TCP connection library with Effect.js integration",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build:main": "bun build --minify-syntax --minify-whitespace ./src/index.ts --outdir ./dist --target node --format esm",
    "build:types": "bun tsc --emitDeclarationOnly --outDir dist",
    "build": "bun run build:main && bun run build:types",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "format": "biome format --write ./src",
    "lint": "biome lint ."
  },
  "keywords": [
    "tcp",
    "connection",
    "effect",
    "bun"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@effect/platform-bun": "^0.65.0",
    "@effect/platform-node": "^0.81.0",
    "effect": "^3.15.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.11",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
