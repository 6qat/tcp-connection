{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [".react-router/**/*", "build/**/*", "node_modules/**/*"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "master",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "recommended": true,
        "noConsole": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "recommended": true
      },
      "complexity": {
        "recommended": true,
        "noForEach": "off"
      },
      "security": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "noUnusedImports": "off",
        "noUnusedVariables": "off",
        "noUnusedLabels": "error",
        "noUnusedFunctionParameters": "error"
      },
      "a11y": {
        "recommended": true,
        "noSvgWithoutTitle": "off"
      },
      "nursery": {
        "recommended": true,
        "noProcessEnv": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  }
}
